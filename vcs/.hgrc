[extensions]
extdiff =

[extdiff]
cmd.vimdiff = vimdiff

[diff]
word-diff = true

[alias]
bk = bookmark
df = diff
pl = !$HG shelve --name pl; $HG pull && $HG rebase -d master && $HG unshelve --name pl
st = status
l = ssl
master = !$HG pull && $HG update master
difftool = !for file in $($HG status -n); do $HG vimdiff $file; done
diffprev = diff -r .^

[hint]
ack = sl-short-headers undo

%include ~/.hgrc-local
