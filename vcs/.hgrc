[extensions]
extdiff =

[extdiff]
cmd.vimdiff = vimdiff

[diff]
word-diff = true

[alias]
bk = bookmark
df = diff
pl = pull
st = status
l = ssl
master = !$HG pull && $HG update master
difftool = !for file in $(hg status -n); do hg vimdiff $file; done
diffprev = diff -r .^

[hint]
ack = sl-short-headers

%include ~/.hgrc-local

[hint]
ack = sl-short-headers undo
