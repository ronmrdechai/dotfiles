[extensions]
extdiff =

[extdiff]
cmd.vimdiff = vimdiff

[diff]
word-diff = true

[alias]
bk = bookmark
df = diff
pl = !$HG shelve --name pl; $HG pull && $HG rebase -d master && $HG unshelve --name pl
st = status
l = ssl
diffprev = diff -r .^
difflocal = diff --since-last-diff

[hint]
ack = sl-short-headers undo

%include ~/.hgrc-local
