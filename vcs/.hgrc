[extensions]
extdiff =

[extdiff]
cmd.vimdiff = vimdiff

[diff]
word-diff = true

[alias]
bk = bookmark
df = diff
pl = pull
master = rebase -d master
warm = rebase -d warm
st = status
stprev = status --rev .^
l = ssl
diffprev = diff -r .^
difflocal = diff --since-last-submit

[hint]
ack = sl-short-headers undo

%include ~/.hgrc-local

[hint]
ack = sl-short-headers undo split-phabricator
